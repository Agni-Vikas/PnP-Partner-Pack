<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @OfficeDevPnP.PartnerPack.Infrastructure.PnPPartnerPackSettings.Title</title>
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/4.0/1/MicrosoftAjax.js"></script>

    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">

        var spHostUrl = '@OfficeDevPnP.PartnerPack.Infrastructure.PnPPartnerPackSettings.InfrastructureSiteUrl';

    </script>

    @Scripts.Render("~/bundles/spoextensions")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @Html.Partial("~/Views/Shared/_Office365SuiteBar.cshtml")
    @Html.Partial("~/Views/Shared/_Office365NavBar.cshtml")

    <div class="scrollableContent">
        <div id="mainContent">
            <div class="ms-Grid">
                <div class="ms-Grid-row">
                    <div class="ms-Grid-col ms-u-sm5 ms-u-md3 ms-u-lg2">
                        <img src="@OfficeDevPnP.PartnerPack.Infrastructure.PnPPartnerPackSettings.LogoUrl" class="siteIcon" />
                    </div>
                    <div class="ms-Grid-col ms-u-sm7 ms-u-md9 ms-u-lg10">
                        <h1>@ViewBag.Title</h1>
                    </div>
                </div>
                <div class="ms-Grid-row">
                    <div class="ms-Grid-col ms-u-sm5 ms-u-md3 ms-u-lg2">
                    </div>
                    <div class="ms-Grid-col ms-u-sm7 ms-u-md9 ms-u-lg10">
                        @RenderBody()
                    </div>
                </div>
                <div class="ms-Grid-row">
                    <div class="ms-Grid-col ms-u-sm12 ms-u-md12 ms-u-lg12">
                        <hr />
                        <footer>
                            @Html.Raw(OfficeDevPnP.PartnerPack.Infrastructure.PnPPartnerPackSettings.FooterMessage)
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/fabric")
    @RenderSection("scripts", required: false)

</body>
</html>
