@model System.String

@{
    var globalTemplates =
        new SelectListItem[]
        {
            new SelectListItem { Text = "Global Template 01", Value = "https://piasysdev.sharepoint.com/sites/PnP-Partner-Pack-Infrastructure/PnPProvisioningTemplates/GlobalTemplate01.xml" },
            new SelectListItem { Text = "Global Template 02", Value = "https://piasysdev.sharepoint.com/sites/PnP-Partner-Pack-Infrastructure/PnPProvisioningTemplates/GlobalTemplate01.xml" },
            new SelectListItem { Text = "Global Template 03", Value = "https://piasysdev.sharepoint.com/sites/PnP-Partner-Pack-Infrastructure/PnPProvisioningTemplates/GlobalTemplate01.xml" },
        };
    var localTemplates =
        new SelectListItem[]
        {
            new SelectListItem { Text = "Local Template 01", Value = "https://piasysdev.sharepoint.com/sites/PnP-Partner-Pack-DevSite/PnPProvisioningTemplates/LocalTemplate01.xml" },
            new SelectListItem { Text = "Local Template 02", Value = "https://piasysdev.sharepoint.com/sites/PnP-Partner-Pack-DevSite/PnPProvisioningTemplates/LocalTemplate01.xml" },
