<div id="template-tabs">
    <ul>
        <li><a href="#tab-global-templates">Global Templates</a></li>
        <li><a href="#tab-local-templates">Local Templates</a></li>
    </ul>
    <div id="tab-global-templates">
        @Html.DropDownListFor(model => model, globalTemplates, new { style = "width:100%;", size = "5" })
    </div>
    <div id="tab-local-templates">
        @Html.DropDownListFor(model => model, localTemplates, new { style = "width:100%;", size = "5" })
    </div>
</div>

@Html.ValidationMessageFor(model => model)
